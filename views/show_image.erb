<html>
	<head>
		<title>Show Image</title>
	</head>
	<body>
		<h2>Your threshold is:
		<%= @threshold.read %> </h2>
		<div style='float:left'>
			<h2>Normal</h2>
			<form action ="download" method = "POST" enctype="multipart/form-data" style='display:inline;'>
				<img src="<%= @carrier_filename %>" />
				<input type = "hidden" name = "file" value = "<%= @carrier_filename %>" />
				<input type = "submit" value = "download"/>
			</form>
		</div>
		<div style='float:left'>
			<h2>Encoded</h2>
			<form action ="download" method = "POST" enctype="multipart/form-data" style='display:inline;'>
				<img src="enc<%= @carrier_filename %>" />
				<input type = "hidden" name = "file" value = "enc<%= @carrier_filename %>" />
				<input type = "submit" value = "download"/>
			</form>
		</div>
		<div style='float:left'>
			<h2>Difference</h2>
			<form action ="download" method = "POST" enctype="multipart/form-data" style='display:inline;'>
				<img src="diff<%= @carrier_filename %>" />
				<input type = "hidden" name = "file" value = "diff<%= @carrier_filename %>" />
				<input type = "submit" value = "download"/>
		</div>
	</body>
</html>
